// Very basic OOP Stuff
// It isn't complete, but it is enough for bootstrapping

import basics
class Object
	// Global variables
	long hashCode
	
	constructor()
		hashCode = 1
	end
end

import basics
import Object
class String extends Object
	char* text
	long length
	long allocatedLength
	
	constructor() 
		// Paranthesis must take the last index of
		text = malloc(10 * sizeof(char))
		length = 0
		allocatedLength = 10
	end
	
	function append(char* extra) returns void
		// put __String_obj before every variable except if it is "extra"
		strcat(text, extra)
	end

	function charAt(long index) returns char
		return text[index]
	end

end

import basics
import String

class IO extends Object

	constructor()

	end

	function print(char* text) returns long
		fprintf(stdout, "%s\n", text)
	end
end

