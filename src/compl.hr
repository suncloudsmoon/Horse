} list_t;

typedef struct {
	list_t *allLines; // List of all lines
	list_t *cleanedLines;
	list_t *parsedLines; // List of parsed lines
	list_t *compiledLines;

	list_t *definitions;
	string_t *includeStatements;
	list_t *classes; // list of class_t

